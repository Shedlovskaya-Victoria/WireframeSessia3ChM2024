<Page x:Class="WireframeSessia3ChM2024.Edit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WireframeSessia3ChM2024"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Edit">

    <Grid>
        <StackPanel DataContext="{Binding NewSample}">
            <Label Content="Анализ 1"/>
            <TextBox Text="{Binding Analis1}"/>
            <Label Content="Анализ 2"/>
            <TextBox Text="{Binding Analis2}"/>
            <Label Content="Результат"/>
            <TextBox Text="{Binding Result}" MinLines="4"/>
            <Label Content="Рекомендации"/>
            <TextBox Text="{Binding Recomedate}" MinLines="5"/>
            <Label Content="Оценка по шкале"/>
            <TextBox Text="{Binding Bal}"/>
        </StackPanel>
    </Grid>
</Page>
